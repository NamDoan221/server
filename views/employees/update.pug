extends ../layouts/common.pug

block content
    .jumbotron.w-100
        h1 Update Employee

        if errors
            each error in errors
                .alert.alert-danger= error

        form(action=`/employees/update/${employee._id}`, method="POST")

            .form-group
                label(for="name") Name
                input#name.form-control(type="text", name="name", value=employee.employee_name)

            .form-group
                label(for="address") Address
                input#address.form-control(type="text", name="address", value=employee.address)

            .form-group
                label(for="phone") Phone
                input#phone.form-control(type="text", name="phone", value=employee.phone_number)

            .form-group
                label(for="regency") Regency
                input#regency.form-control(type="text", name="regency", value=employee.regency)

            .form-group
                label(for="salary") Salary
                input#salary.form-control(type="number", name="salary", value=employee.salary)

            .form-group
                label(for="age") Age
                input#age.form-control(type="number", name="age", value=employee.age)

            button.btn.btn-primary Update